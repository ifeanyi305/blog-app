<div>
  <div><img src="<%= @user.photo %>" alt="user" /></div>
  <div>
    <h1><%= @user.name %></h1>
    <p>Number of posts: <%= @user.posts.count %></p>
  </div>
</div>
<% @posts.each do |post| %>
  <div>
    <h1><%= post.title %></h1>
    <span><%= post.text %></span>
    <span>comments: <%= post.comments.count %></span>
    <span>Likes: <%= post.likes.count %></span>
    <a href="/users/<%= @user.id %>/posts/<%= post.id %>" class="">view post</a>
  </div>
  <% post.five_most_recent_comments.each do |comment| %>
    <div>
      <span><%= comment.author.name  %>: </span>
      <span><%= comment.text  %></span>
    </div>
  <%-end-%>
<% end %>
